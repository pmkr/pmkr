;;
; In this file the key-value pairs listed in order as they appear on the documentation page.
;
; @link https://xdebug.org/docs/all_settings
;;

{% if extensionSetItem.status == 'enabled' or not extensionSetItem.isEnabled %};{% endif %}zend_extension={{ extension.name }}{{ extFileSuffix }}

xdebug.cli_color=1
;xdebug.client_discovery_header=
;xdebug.client_host=localhost
;xdebug.client_port=9003
;xdebug.cloud_id=
;xdebug.collect_assignments=Off
;xdebug.collect_return=Off
;xdebug.connect_timeout_ms=200
;xdebug.discover_client_host=Off
;xdebug.dump.COOKIE=
;xdebug.dump.ENV=
;xdebug.dump.FILES=
;xdebug.dump.GET=
;xdebug.dump.POST=
;xdebug.dump.REQUEST=
;xdebug.dump.SERVER=
;xdebug.dump.SESSION=
;xdebug.dump_globals=On
;xdebug.dump_once=On
;xdebug.dump_undefined=Off
xdebug.file_link_format="phpstorm://open?file=%f&line=%l"
;xdebug.filename_format=%f
xdebug.force_display_errors=1
;xdebug.force_error_reporting=0
;xdebug.gc_stats_output_name=gcstats.%p

; This setting allows you to configure a mask that determines whether,
; and which, notices and/or warnings get converted to errors.
; You can configure notices and warnings that are generated by PHP,
; and notices and warnings that you generate yourself (by means of trigger_error()).
;xdebug.halt_level=E_WARNING|E_NOTICE|E_USER_WARNING|E_USER_NOTICE
;xdebug.halt_level=0

xdebug.idekey=PHPSTORM
;xdebug.log=
;xdebug.log_level=7
;xdebug.max_nesting_level=256
;xdebug.max_stack_frames=-1

; https://xdebug.org/docs/all_settings#mode
; You can enable multiple modes at the same time by comma separating their identifiers.
;xdebug.mode=off,develop,coverage,debug,gcstats,profile,trace

xdebug.output_dir={{ env.HOME }}/tmp/xdebug

xdebug.profiler_append=0
xdebug.profiler_output_name=cachegrind.out.%p.%t.%H.%R.xp
;xdebug.scream=Off
;xdebug.show_error_trace=0
;xdebug.show_exception_trace=0
;xdebug.show_local_vars=0
xdebug.start_upon_error=default

; Name of the trigger is: XDEBUG_TRIGGER
xdebug.start_with_request=trigger

;xdebug.trace_format=0
;xdebug.trace_options=0
;xdebug.trace_output_name=trace.%c
;xdebug.trigger_value=
;xdebug.var_display_max_children=128
;xdebug.var_display_max_data=512
;xdebug.var_display_max_depth=5
