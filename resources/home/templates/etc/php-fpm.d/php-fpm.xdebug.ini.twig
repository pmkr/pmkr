[global]
; Pid file
; Note: the default prefix is /usr/share/php-x.x.x/var
; Default Value: none
;pid=run/php-fpm.pid
pid={{ dir.run }}/pmkr-php.{{ instance.key }}.fpm.xdebug.pid


; Error log file
; If it's set to "syslog", log is sent to syslogd instead of being written
; in a local file.
; Note: the default prefix is /usr/share/php-x.x.x/var
; Default Value: log/php-fpm.log
error_log={{ dir.log }}/pmkr-php.{{ instance.key }}.xdebug.fpm.error.log

include=etc/php-fpm.d/pool.d/xdebug.*.ini
